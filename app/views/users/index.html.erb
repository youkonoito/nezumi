<% provide(:title, 'すべてのユーザー') %>
<h1>すべてのユーザー</h1>

<%= paginate @users %>

<ul>
  <% @users.each do |user| %>
    <li>
      <%= link_to user.name, user %>
      <% if current_user.admin? && !current_user?(user) %>
      | <%= link_to "削除", user, method: :delete, data: { confirm: "削除してよろしいですか?" } %>
      <% end %>
    </li>
  <% end %>
</ul>

<%= paginate @users %>
